{% extends 'MooFlashCardBundle::base.html.twig' %}

{% block javascripts %}
{# No javascript required for this page. #}
{% endblock %}

{% block metas %}
    {{ parent() }}
    {% if card is not null %}
        <meta name="keywords" content="{{ card.getMetaKeywords()|join(',') }}"/>
        <meta name="description" content="{{ card.getMetaDescription()|e }}"/>
    {% endif %}
{% endblock metas %}

{% block body %}
    {{ include('MooFlashCardBundle:Card:details.html.twig', { 'card': card, share_link: true, popup: false, page_link: false }) }}
{% endblock %}
